<h1>Login With Your Gritty Account</h1>

<%= form_tag sessions_path do %>
  <%= label_tag :email, nil, class: "form-label fw-bold" %><br>
  <%= text_field_tag :email, "", class: "form-control-lg" %><br><br>
  <%= label_tag :password, nil, class: "form-label fw-bold" %><br>
  <%= password_field_tag :password, "", class: "form-control-lg" %><br><br>
  <%= submit_tag "Login", class: "btn btn-primary" %>
<%end%>

<%= button_to "Log in with Google", '/auth/google_oauth2', class: "position-absolute top-50 start-50 translate-middle btn btn-primary btn-lg" %>
