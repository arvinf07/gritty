<h1>Login With Your Gritty Account</h1>

<%= form_tag sessions_path do %>
  <%= label_tag "Email", class: "form-label" %><br>
  <%= text_field_tag :email, class: "form-control-lg" %><br><br>
  <%= label_tag "Password", class: "form-label" %><br>
  <%= password_field_tag :password, class: "form-control-lg" %><br><br>
  <%= submit_tag "Login", class: "btn btn-primary" %>
<%end%>

<h2>Or</h2>
<%= button_to "Log in with Google", '/auth/google_oauth2'  %>
