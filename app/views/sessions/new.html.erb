<h1>Login With Your Gritty Account</h1>

<%= form_tag sessions_path do %>
  <%= label_tag "Email" %><br>
  <%= text_field_tag :email %><br><br>
  <%= label_tag "Password" %><br>
  <%= password_field_tag :password %><br><br>
  <%= submit_tag "Login" %>
<%end%>

<h2>Or</h2>
<%= button_to "Log in with Google", '/auth/google_oauth2'  %>
