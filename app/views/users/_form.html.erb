
<%= form_for @user do |f| %>
  <%= f.label "Username" %><br>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %><br>
  <%= f.email_field :email %><br><br>

  <%= f.label "Weight(in pounds)" %><br>
  <%= f.number_field :weight, min: 0 %><br><br>

  <%= f.label "Height(in inches)" %><br>
  <%= f.number_field :height, min: 0 %><br><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.submit %>
<% end %>  