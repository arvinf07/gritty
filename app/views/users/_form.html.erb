
<%= form_for @user do |f| %>
  <%= f.label "Username", class: "form-label" %><br>
  <%= f.text_field :name, class: "form-control-lg" %><br><br>

  <%= f.label :email, class: "form-label" %><br>
  <%= f.email_field :email, class: "form-control-lg" %><br><br>

  <%= f.label "Weight(in pounds)", class: "form-label" %><br>
  <%= f.number_field :weight, min: 0, class: "form-control-lg" %><br><br>

  <%= f.label "Height(in inches)", class: "form-label" %><br>
  <%= f.number_field :height, min: 0, class: "form-control-lg" %><br><br>

  <%= f.label :password, class: "form-label" %><br>
  <%= f.password_field :password, class: "form-control-lg" %><br><br>

  <%= f.label :password_confirmation, class: "form-label" %><br>
  <%= f.password_field :password_confirmation, class: "form-control-lg" %><br><br>

  <%= f.submit class: "btn btn-primary" %>
<% end %>  