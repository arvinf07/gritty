<%=form_tag('/exercises', method: 'get') do %>
  <label for="difficulty">Choose a difficulty:</label>

  <select name="difficulty" id="filer">
    <option value="Beginner">Beginner</option>
    <option value="Intermediate">Intermediate</option>
    <option value="Advanced">Advanced</option>
  </select>

  <%= submit_tag("Search")%>
<% end %>
  

<h1>Exercises</h1>

<% @exercises.each do |exercise| %>
  <div>
    <h3><%= exercise.name %></h3>
    <a href="<%=exercise_path(exercise)%>"><%= image_tag exercise.image, size: "100x100" %><br></a>
    Equipment: <%= exercise.equipment %><br>
    Difficulty: <%= exercise.difficulty %>   
    <br> 
  </div>  
<%end%>